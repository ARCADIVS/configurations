#!/bin/sh

if [ -d "$HOME/bin" ]; then
    export PATH="$PATH:$HOME/bin"
fi
if [ -d "$HOME/.config" ]; then
    export XDG_CONFIG_HOME="$HOME/.config"
fi
export EDITOR=vim

eval `dircolors $HOME/.config/dir_colors`

source_if_possible() {
    if [ -f $@ ] && [ -r $@ ]; then
        source $@
    fi
}

is_shell_interactive() {
    case $- in
        *i*) return 0;;
          *) return 1;;
    esac
}
