"1.0rc1

loadplugins '\.(js|penta)$'
group user

set findflags=rL
set defsearch=startpage-ssl
set editor='urxvt -e vim -n <file>'

"{{{ Appearance
	colorscheme solarized-dark
	set showmode=base,operator
	set guioptions+=c
	set showtabline=multitab
	1pintab
	open dactyl://help/intro
"}}}

"{{{ Input Settings and Key Bindings
	set hintkeys=asdfjkl;ghqwertyuiopzxcvbnm,./
	nmap -builtin J <C-D>
	nmap -builtin K <C-U>
	nmap -builtin <C-h> 0
	nmap -builtin <C-j> <C-f>
	nmap -builtin <C-k> <C-b>
	nmap -builtin <C-l> $
	nmap -builtin <C-/> /\C
"}}}

"extupdate!

source! $HOME/.config/private/pentadactylrc
command! -nargs=* sysadmin open gentoo-wiki <args> | archwiki <args> | debian-wiki <args> | funtoo-linux-wiki <args> | unofficial-gentoo-wiki <args>

" vim: set ft=pentadactyl:
